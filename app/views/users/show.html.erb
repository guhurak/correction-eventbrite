<h1>Ton profil :</h1>

<p>Prénom : <%= @user.first_name %></p>
<p>Nom : <%= @user.last_name %></p>
<p>Email : <%= @user.email %></p>
<p>Description : <%= @user.description %></p>
<%= link_to "Editer les informations personnelles", edit_user_registration_path(@user.id) %>
<%= link_to "Editer le profil", edit_user_path(@user.id) %>

<h2>Tout ses évènements :</h2>

<div class="card-deck">
	<% @events.each do |event| %>
	<div class="col-3">
		<div class="card mb-4">
			<%= link_to "#{event.title}", event_path(event.id), class: "card-title"%>
		</div>
	</div>
	<% end %>
</div>
